{
  "buildCommand": "cd client && npm run build",
  "outputDirectory": "client/build",
  "devCommand": "npm run dev",
  "env": {
    "REACT_APP_SOCKET_URL": "@react_app_socket_url"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
